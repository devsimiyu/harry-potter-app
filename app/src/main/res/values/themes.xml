<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HarryPotter" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/content_bg_color</item>
        <item name="colorPrimaryVariant">@color/content_bg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/tool_bar_bg_color</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/content_bg_color</item>
        <item name="android:textColorTertiary">@color/content_text_color</item>
    </style>
    <style name="Theme.HarryPotter.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.HarryPotter.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.HarryPotter.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
